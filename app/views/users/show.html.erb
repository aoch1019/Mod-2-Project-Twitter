<h1>Welcome to the profile of:
    <%= @user.name %>
</h1>

<% if @user.profile_pic %>
<%= image_tag @user.profile_pic %>
<% end %>

<br>
<br>Tweets feed:<br>
<h4><% @user.tweets.each do |tweet| %>
     <%= "-------------------------------------" %><br>
     <%= link_to tweet.content, user_tweet_path(tweet.user, tweet) %><br>
     <h6> <%= "#{tweet.num_likes} like(s)" %> </h6>
     <%= button_to "Like", user_tweet_likes_path(tweet.user, tweet) %><br>
     <%= button_to "Add a comment", new_user_tweet_comment_path(tweet.user, tweet), :method => :get %><br>
     <%= "-------------------------------------" %><br>
     <%  end %>
</h4>
<br><br>
<%= link_to "Create a Tweet", new_user_tweet_path(@user) %><br>

<%= link_to "View all users", users_path %>
